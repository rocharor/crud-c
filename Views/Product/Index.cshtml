</style>
<script>
    function edit(id) {
        $('#save-'+id).removeClass('d-none');
        $('#input-'+id).removeClass('d-none');
        $('#cancel-'+id).removeClass('d-none');

        $('#edit-'+id).addClass('d-none');
        $('#delete-'+id).addClass('d-none');
    }

    function del(id) {

    }

    function save(id) {
        var value = $('#input-'+id).val();
        console.log(value);
    }

    function cancel(id) {
        $('#save-'+id).addClass('d-none');
        $('#input-'+id).addClass('d-none');
        $('#cancel-'+id).addClass('d-none');

        $('#edit-'+id).removeClass('d-none');
        $('#delete-'+id).removeClass('d-none');

        $('#input-'+id).val('');
    }


</script>
